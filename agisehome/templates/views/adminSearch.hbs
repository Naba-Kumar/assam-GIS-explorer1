        <main class="content px-3 py-2  bg-adminbg">
            <div class="container-fluid p-4">
                <div class="input-group mb-3">
                    <input id="search-email" type="search" class="form-control " placeholder="Search by Email" aria-label="Search" aria-describedby="search-addon" />
                    <button id="search-btn" type="button" class="btn btn-primary">Search</button>
                </div>

                <div class="card border-0 rounded bg-tablebg">
                    <div class="card-header">

                        <h6 class="card-subtitle text-muted p-4 text-center">
                            Search User and view Profile!
                        </h6>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">id</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Organization</th>
                                    <th scope="col">Designation</th>

                                    <th scope="col">View</th>
                                </tr>
                            </thead>
                            <tbody id="user-table-body">
                                {{#each userItems}}

                                <div class="modal fade" id="modal-{{this.user_id}}" tabindex="-1"
                                    aria-labelledby="exampleModalLongTitle" aria-hidden="true">

                                    <div class="modal-dialog" id="profile-window">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">User details</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <section style="background-color: #eee;" class="col-lg-12 d-flex">
                                                    <div class="container py-5">
                                                        <div class="row"></div>
                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <div class="card mb-4">
                                                                    <div class="card-body text-center">
                                                                    
                                                                        <img src="data:image/png;base64,{{this.id_proof}}" alt="User ID Proof" style="max-width: 450px;">

                                                                    </div>
                                                                </div>
                                                                <div class="card mb-4 mb-lg-0">
                                                                    <div class="card-body p-0">
                                                                        <ul
                                                                            class="list-group list-group-flush rounded-3">
                                                                            <h3 class="text-center m-5">About</h3>
                                                                            <p class="m-3">{{this.about}}</p>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-6">
                                                                <div class="card mb-4">
                                                                    <div class="card-body">
                                                                        <div class="row">
                                                                            <div class="col-sm-3">
                                                                                <p class="mb-0">First Name</p>
                                                                            </div>
                                                                            <div class="col-sm-9">
                                                                                <p class="text-muted mb-0">
                                                                                    {{this.first_name}}</p>
                                                                            </div>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="row">
                                                                            <div class="col-sm-3">
                                                                                <p class="mb-0">Last Name</p>
                                                                            </div>
                                                                            <div class="col-sm-9">
                                                                                <p class="text-muted mb-0">
                                                                                    {{this.last_name}}</p>
                                                                            </div>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="row">
                                                                            <div class="col-sm-3">
                                                                                <p class="mb-0">Email</p>
                                                                            </div>
                                                                            <div class="col-sm-9">
                                                                                <p class="text-muted mb-0">
                                                                                    {{this.email}}
                                                                                </p>
                                                                            </div>
                                                                        </div>
                                                                        <hr>
                                                                        <div class="row">
                                                                            <div class="col-sm-3">
                                                                                <p class="mb-0">Phone</p>
                                                                            </div>
                                                                            <div class="col-sm-9">
                                                                                <p class="text-muted mb-0">
                                                                                    {{this.mobile}}
                                                                                </p>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-lg-12">
                                                                        <div class="card mb-4">
                                                                            <div class="card-body">
                                                                                <div class="row">
                                                                                    <div class="col-sm-3">
                                                                                        <p class="mb-0">Organization</p>
                                                                                    </div>
                                                                                    <div class="col-sm-9">
                                                                                        <p class="text-muted mb-0">
                                                                                            {{this.organization}}</p>
                                                                                    </div>
                                                                                </div>
                                                                                <hr>
                                                                                <div class="row">
