<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your GIS Platform</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <!-- <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">  -->

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/userStyle.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@v9.2.4/ol.css">


    <script src="/js/script.js"></script>


</head>

<body>


    <section class="wrapper">
        <div class="container-fostrap">

            <div class="content-md">
                <div class="row">
                            {{#each catalogItems}}

                    <div class="col-xs-12 col-sm-3">
                        <div class="card">
                            <a class="map-card">
                                <div id="map-{{@index}}" class="map" style="height: 200px; width: 100%;"></div>
                            </a>
                            <div class="card-content">
                                <h4 class="card-title">
                                    <a>{{this.title}}
                                    </a>
                                </h4>
                                <p class="">
                                    {{this.description}}
                                </p>
                            </div>
                            <div class="card-read-more">
                                <div class="bg-light rounded h-100 p-1">
                                    <div id="map-{{@index}}" class="map" style="height: 200px; width: 100%;"></div>
                                    <h4 class="mb-3 p-4">{{this.title}}</h4>
                                    {{!-- <p class="mb-3 p-4">{{this.file_name}}</p> --}}
                                    <p class="mb-4 p-4">{{this.description}}</p>
                                    <div class="small">

                                        <a class="btn btn-primary text-white py-1 px-0 col-lg-3"
                                            href="/catalog/{{this.file_name}}">View</a>
                                        {{#ifCond requestStatus '===' 'request'}}
                                        {{!-- {{v1}} is equal to {{v2}} --}}

                                        <a class="btn btn-primary text-white py-1 px-0 col-lg-4"
                                            id="request-{{@index}}"> Request </a>
                                        <a class="btn btn-secondary text-white py-1 px-0 col-lg-4 inactiveLink"
                                            href="">Download</a>
                                        {{else ifCond requestStatus '===' 'requested'}}
                                        {{!-- {{v1}} is not equal to {{v3}} --}}
                                        <a class="btn btn-warning text-white py-1 px-0 col-lg-4 inactiveLink"
                                            id="request-{{@index}}"> Requested </a>
                                        <a class="btn btn-warning text-white py-1 px-0 col-lg-4 inactiveLink"
                                            href="">Download</a>
                                        {{else ifCond requestStatus '===' 'approved'}}
                                        {{!-- {{v1}} is not equal to {{v3}} --}}
                                        <a class="btn btn-secondary text-white py-1 px-0 col-lg-4 inactiveLink"
                                            id="request-{{@index}}"> Approved </a>
                                        <a class="btn btn-success text-white py-1 px-0 col-lg-4 " href="">Download</a>

                                        {{else ifCond requestStatus '===' 'rejected'}}
                                        {{!-- {{v1}} is not equal to {{v3}} --}}
                                        <a class="btn btn-warning text-white py-1 px-0 col-lg-4 inactiveLink"
                                            id="request-{{@index}}"> Rejected </a>
                                        <a class="btn btn-danger text-white py-1 px-0 col-lg-4 inactiveLink"
                                            href="">Download</a>
                                        {{/ifCond}}

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                            {{/each}}


                </div>
            </div>
        </div>
    </section>

    <div class="row g-3">
        {{#each catalogItems}}
        <div class="col-lg-3 col-md-6 wow">
            <div class="bg-light rounded h-100 p-1">
                <div id="map-{{@index}}" class="map" style="height: 200px; width: 100%;"></div>
                <h4 class="mb-3 p-4">{{this.title}}</h4>
                {{!-- <p class="mb-3 p-4">{{this.file_name}}</p> --}}
                <p class="mb-4 p-4">{{this.description}}</p>
                <div class="small">

                    <a class="btn btn-primary text-white py-1 px-0 col-lg-3" href="/catalog/{{this.file_name}}">View</a>
                    {{#ifCond requestStatus '===' 'request'}}
                    {{!-- {{v1}} is equal to {{v2}} --}}

                    <a class="btn btn-primary text-white py-1 px-0 col-lg-4" id="request-{{@index}}"> Request </a>
                    <a class="btn btn-secondary text-white py-1 px-0 col-lg-4 inactiveLink" href="">Download</a>
                    {{else ifCond requestStatus '===' 'requested'}}
                    {{!-- {{v1}} is not equal to {{v3}} --}}
                    <a class="btn btn-warning text-white py-1 px-0 col-lg-4 inactiveLink" id="request-{{@index}}">
                        Requested </a>
                    <a class="btn btn-warning text-white py-1 px-0 col-lg-4 inactiveLink" href="">Download</a>
                    {{else ifCond requestStatus '===' 'approved'}}
                    {{!-- {{v1}} is not equal to {{v3}} --}}
                    <a class="btn btn-secondary text-white py-1 px-0 col-lg-4 inactiveLink" id="request-{{@index}}">
                        Approved </a>
                    <a class="btn btn-success text-white py-1 px-0 col-lg-4 " href="">Download</a>

                    {{else ifCond requestStatus '===' 'rejected'}}
                    {{!-- {{v1}} is not equal to {{v3}} --}}
                    <a class="btn btn-warning text-white py-1 px-0 col-lg-4 inactiveLink" id="request-{{@index}}">
                        Rejected </a>
                    <a class="btn btn-danger text-white py-1 px-0 col-lg-4 inactiveLink" href="">Download</a>
                    {{/ifCond}}

                </div>
            </div>
        </div>
        {{/each}}
    </div>

</body>

</html>