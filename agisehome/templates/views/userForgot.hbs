{{>userHeader}}
{{>loader}}


<div class="row mt bg-adminbg rounded d-flex justify-content-center">
        <a href="/user" class=" px-5 py-2 m-0 col-md-4 d-flex justify-content-center"> 
            REGISTER
        </a>
        <a href="/user/Login" class=" px-5 py-2 m-0 col-md-4 d-flex justify-content-center"> 
        LOGIN
        </a>
        <a href="/user/Forgot" class=" px-5 py-2 m-0 col-md-4 d-flex justify-content-center bg-cardbg">
        UPDATE
        </a>
</div>

<form id="forgotForm" action="/user/forgot" method="POST" enctype="multipart/form-data" class="mt-2">

    <div class="row">
        <div class="col-md-4">
            <div class="form-group first">
                <label for="lname">E-mail address<span class="text-danger">*</span></label>
                <input type="text" class="form-control" placeholder="e.g. xyz@google.com" id="email" name="email">
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group first">
                <label for="fname" style="color: aliceblue;"> .</label>
                <input type="submit" name="submit" value="GetOTP" class="btn px-4 btn-primary mt-4" >
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group first">
                <label for="lname">Enter OTP<span class="text-danger">*</span></label>
                <input type="text" class="form-control" placeholder="OTP" id="otp" name="otp">
            </div>
        </div>
      
    </div>


    <div class="row">
        <div class="col-md-6">

            <div class="form-group last mb-3">
                <label for="password">Password<span class="text-danger">*</span></label>
                <input type="password" class="form-control" placeholder="*****"  id="password" name="password">
            </div>
        </div>
        <div class="col-md-6">

            <div class="form-group last mb-3">
                <label for="re-password">Re-type Password<span class="text-danger">*</span></label>
                <input type="password" class="form-control" placeholder="*****"  id="re_password" name="re_password">
            </div>
        </div>
    </div>


    <input type="submit" name="submit" value="update" class="btn px-5 btn-primary">

</form>



